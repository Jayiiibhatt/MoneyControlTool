<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/moneycontrolguide</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">java</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="Model/User.hbm.xml"/>
    <mapping resource="Model/ExchangeModel.hbm.xml"/>
    <mapping resource="Model/CompanyModel.hbm.xml"/>
    <mapping resource="Model/ExchangeRecordModel.hbm.xml"/>
    <mapping resource="Model/FinanceModel.hbm.xml"/>
    <mapping resource="Model/CompanyRecord.hbm.xml"/>
    <mapping resource="Model/ShareHolderTransaction.hbm.xml"/>
    <mapping resource="Model/CompanyExchangeRegistration.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
